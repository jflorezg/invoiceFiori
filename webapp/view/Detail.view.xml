<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:semantic="sap.m.semantic" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" controllerName="com.perceptio.invoiceperceptio.InvoicePerceptio.controller.Detail"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<semantic:DetailPage id="page" navButtonPress="onNavBack"
		busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">
		<semantic:content>
			<Panel>
				<headerToolbar>
					<Toolbar id="toolbar2">
						<Title text="Tarifa Cliente"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://save" press="onSaveRate"/>
						<Button icon="sap-icon://write-new-document"/>
						<Button icon="sap-icon://add-document"/>
					</Toolbar>
				</headerToolbar>
				<content>
					<VBox class="sapUiSmallMargin">
						<f:SimpleForm
							id="SimpleFormToolbar"
							editable="true"
							layout="ResponsiveGridLayout"
							adjustLabelSpan="false"
							labelSpanS="8"
							labelSpanM="12"
							labelSpanL="3"
							labelSpanXL="12"
							emptySpanS="0"
							emptySpanM="0"
							emptySpanL="8"
							emptySpanXL="0"
							columnsM="1"
							columnsXL="2"
							columnsL="1"
							singleContainerFullSize="false" ariaLabelledBy="Title1">
							<f:content>
								<Label text="Tarifa/Num Horas"/>
								<ComboBox
									xmlns="sap.m"
									id="rateCb"
									placeholder="Tarifa"
									change="onChangeRate">
								</ComboBox>
								<Input value="{/description}" editable="true"  placeholder="Debes poner tu descripción aquí"/>
								<Label text="Especialidad"/>
								<ComboBox
									xmlns="sap.m"
									id="serviceCb"
									placeholder="Especialidad">
								</ComboBox>
								<Input editable="true"  placeholder="Numero de horas" value="{/hours}"/>
								<Input editable="true"  placeholder="$" value="{/charge}"/>
							</f:content>
						</f:SimpleForm>
					</VBox>
				</content>
			</Panel>
			<Panel>
				<content>
					<Table id="Tabla_invoice" inset="false" items="{path:'/tableModel'}">
						<headerToolbar>
						</headerToolbar>
						<columns>
							<Column width="12em">
								<Text text="Requerimientos"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true">
								<Text text="Cliente"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Begin">
								<Text text="Horas"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Begin">
								<Text text="Tarifa"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Begin">
								<Text text="Especialidad"/>
							</Column>							
							<Column  minScreenWidth="Desktop" demandPopin="true" hAlign="End">
								<Text text="Precio/H*T"/>
							</Column>
						</columns>
						<ColumnListItem>
							<Text text="{requirement}"/>
							<Text text="{customer}"/>
							<Text text="{hours}"/>
							<Text text="{charge}"/>
							<Text text="{service}"/>
							<Text text="{total}"/>
						</ColumnListItem>
					</Table>
				</content>
			</Panel>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>
